{
  "network": {
    "servers": [ "logstash.local:5043" ],
    "timeout": 15,
    "transport": "tls",
    "ssl key": "etc/ssl/private/selfsigned.key",
    "ssl ca": "etc/ssl/certs/selfsigned.crt"
  },
  "files": [
    {
      "paths": [
        "/var/log/syslog",
        "/var/log/auth.log"
       ],
      "fields": { "type": "syslog" }
    },
    {
       "paths":  [ "/var/log/nginx/*-access.log" ],
       "fields": { "type": "nginx-access" }
    },
    {
       "paths":  [ "/var/log/magento/elktest.log" ],
       "fields": { "type": "magento" }
    },
    {
       "paths":  [ "/var/log/magento/system.log" ],
       "fields": { "type": "magento" }
    }
   ]
}
